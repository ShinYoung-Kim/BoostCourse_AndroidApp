<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/movie_info"
            android:id="@+id/movie_info"/>
        <include
            layout="@layout/movie_info_simple"
            android:id="@+id/movie_info_simple"/>
        <include
            layout="@layout/movie_story"
            android:id="@+id/movie_story"/>
        <include
            layout="@layout/movie_rating"
            android:id="@+id/movie_rating"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toSeeAll"
            android:text="@string/toSeeAll"
            android:textColor="@color/purple_200"
            android:background="@drawable/shape"/>

        <include layout="@layout/movie_sns_buttons"/>
    </LinearLayout>
</ScrollView>
